import java.util.*;

public class GroceryItem
{
 private int productnum;
 private int quantity;
 private double price;
 private String tax;
 private String description;

 public int getNumber()
 {
  return productnum;
 }
 public int getQuantity()
 {
  return quantity;
 }
 public double getPrice()
 {
  return price;
 }
 public String getTaxCode()
 {
  return tax;
 }
 public String getName()
 {
  return description;
 }
 public static int itemSearch(GroceryItem item[],int numItems,int productID)
 {
   for(int i = 0;i<=numItems;i++)
   {
    if(productID == item[i].productnum)
      return i;
   }
    return -1;
 }
 public static void printInventory(GroceryItem item[],int numItems)
 {
   for(int i = 0;i<=numItems-1;i++)
   {
    System.out.printf("%7s",item[i].getNumber());
    System.out.printf("%13s",item[i].getName());
    System.out.printf("%5s",item[i].getQuantity());
    System.out.printf("%5s",item[i].getPrice());
    System.out.printf("%3s\n",item[i].getTaxCode());
   }
 }
 public void setQuantity(int value)
 {
   quantity = value;
 }

}
